{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Home Media Server - Windows Desktop App",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "start": "vite build && cross-env ELECTRON_RUN_AS_NODE= electron .",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_RUN_AS_NODE= VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@home-media-server/shared": "1.0.0",
    "bonjour": "^3.5.0",
    "chokidar": "^3.5.0",
    "express": "^4.18.0",
    "mime-types": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "sql.js": "^1.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bonjour": "^3.5.0",
    "@types/express": "^4.17.0",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/sql.js": "^1.4.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.0",
    "tree-kill": "^1.2.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.15.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.homemediaserver.app",
    "productName": "Home Media Server",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
